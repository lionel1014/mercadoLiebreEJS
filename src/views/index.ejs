<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<div class="col-12 col-sm-6 col-lg-3">
				<% for( let i = 0; i < productVisited.length; i++) {%>
				<section class="product-box">
					<a href="/products/detail/<%= productVisited[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= productVisited[i].image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>FINAL PRICE <%= productVisited[i].price %> </h2>
							<span>DISCOUNT <%= productVisited[i].discount %> % OFF</span>
							<p><%= productVisited[i].name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			<% } %>
			</div>
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<div class="col-12 col-sm-6 col-lg-3">
				<% for( let i = 0; i < productWithDiscount.length; i++) {%>
				<section class="product-box">
					<a href="/products/detail/<%= productWithDiscount[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= productWithDiscount[i].image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>FINAL PRICE <%= productWithDiscount[i].price %> </h2>
							<span>DISCOUNT <%= productWithDiscount[i].discount %> % OFF</span>
							<p><%= productWithDiscount [i].name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
				<% } %>
			</div>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>